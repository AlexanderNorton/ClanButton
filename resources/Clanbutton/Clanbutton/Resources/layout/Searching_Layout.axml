<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#24303d">
    <LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<include layout="@layout/top_bar"/>
		<ImageButton
			android:id="@+id/mainbutton"
			android:src="@drawable/clanbutton"
			android:layout_gravity="center"
			android:layout_width="200dp"
			android:scaleType="fitCenter"
			android:background="#24303d"
			android:layout_height="200dp"/>
        <AutoCompleteTextView
            android:id="@+id/searchbar"
			android:paddingHorizontal="5dp"
            android:layout_width="wrap_content"
            android:hint="Search for any game.."
			android:layout_gravity="center"
            android:layout_height="wrap_content"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/library_section">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Steam Library"
				android:textSize="23dp"
				android:padding="8dp"
				android:textColor="@android:color/white"/>
			<RelativeLayout
				android:padding="16dp"
				android:layout_marginTop="30dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<GridView
					android:id="@+id/grid_view_image_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:numColumns="auto_fit"/>
			</RelativeLayout>
		</RelativeLayout>
		<Button
			android:id="@+id/current_game_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textSize="40px"
			android:visibility="gone"
			android:background="#ff3939"
			android:textColor="#ffffff"
			android:padding="10dp"
			android:layout_marginTop="20dp" />
		<Button
			android:id="@+id/beacon_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textSize="40px"
			android:padding="10dp"
			android:background="#ff3939"
			android:textColor="#ffffff"
			android:layout_marginTop="20dp"
			android:visibility="gone"
            android:text="Deploy a Beacon" />
        <Button
            android:id="@+id/chatroom_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textSize="40px"
			android:visibility="gone"
			android:padding="10dp"
			android:background="#ff3939"
			android:textColor="#ffffff"
			android:layout_marginTop="10dp"
            android:text="Enter chat room" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			android:divider="@android:color/transparent"
			android:dividerHeight="3dp"
			android:visibility="gone"
            android:id="@+id/playerslist" 
			android:layout_margin="8dp"/>
    </LinearLayout>
</RelativeLayout>